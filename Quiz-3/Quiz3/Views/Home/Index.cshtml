@model Ejercicio_2009_II_clase_6.Models.DatosEmail
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h3>Ingrese los datos</h3>
        @using (Html.BeginForm("DatosPersonales", "Home", FormMethod.Post))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div>
        <div>
            @Html.LabelFor(m => m.Email, new { @class = "control-danger" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(m => m.Password, new { @class = "control-danger" })
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(m => m.PasswordVerificacion, new { @class = "control-danger" })
            @Html.TextBoxFor(m => m.PasswordVerificacion, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.PasswordVerificacion, "", new { @class = "text-danger" })
        </div>
    </div>
            <input type="submit" value="Enviar" />
        }
    </div>
</body>
</html>
